<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EMUPlayer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">#1976D2</item>
<!--        <item name="colorPrimaryVariant">#1976D2</item>-->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="music_player_splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/slash_screen_icon</item>
    </style>
    <style name="curved_shape">
        <item name="cornerSize">15%</item>

    </style>
    <style name="curved_shapeA">
        <item name="cornerSize">5%</item>
    </style>
    <style name="fragmentShape">
        <item name="strokeColor">@color/mainPrimaryColor</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerSize">5%</item>
    </style>
